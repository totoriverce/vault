<div class="console-ui-output has-copy-button">
  <JsonEditor
    @showToolbar={{false}}
    @value={{stringify this.content}}
    @readOnly={{true}}
    @viewportMargin="Infinity"
    @gutters={{false}}
    @theme="hashi auto-height"
  />
  <HoverCopyButton @copyValue={{stringify this.content}} />
</div>