<div class="console-ui-output has-text-grey">
  <JsonEditor
    @showToolbar={{false}}
    @value={{stringify this.content}}
    @readOnly={{true}}
    @viewportMargin="Infinity"
    @gutters={{false}}
    @theme="hashi auto-height"
  />
  <Hds::Copy::Button
    @text="Copy"
    @isIconOnly={{true}}
    @textToCopy={{stringify this.content}}
    class="transparent icon-grey-500 top-right-absolute"
  />
</div>